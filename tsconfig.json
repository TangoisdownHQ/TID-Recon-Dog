{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "utils/logger": ["utils/logger"],
      "config/config": ["config/config"]
    }
  },
  "include": [
    "src/**/*"
  ]
}

